{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Auth Service",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/apps/auth-service/main.js",
      "preLaunchTask": "nx:build-auth-service",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": ["--enable-source-maps"],
      "outFiles": ["${workspaceFolder}/dist/apps/auth-service/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**",
        "!${workspaceFolder}/apps/auth-service/src/prisma-setup/generated/**"
      ],
      "sourceMapPathOverrides": {
        "webpack:///./apps/auth-service/*": "${workspaceFolder}/apps/auth-service/*",
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///*": "*"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Auth Service",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/auth-service/**/*.js"],
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///*": "*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server Nest",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/dist/apps/server-nest/main.js",
      "preLaunchTask": "nx:build-server-nest",
      "outFiles": ["${workspaceFolder}/dist/apps/server-nest/**/*.js"],
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///*": "*"
      },
      "smartStep": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Server Nest",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/server-nest/**/*.js"],
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///*": "*"
      }
    }
  ]
}
