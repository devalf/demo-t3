{
  "name": "monitoring",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/monitoring/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/monitoring",
        "main": "libs/monitoring/src/index.ts",
        "tsConfig": "libs/monitoring/tsconfig.lib.json",
        "assets": ["libs/monitoring/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/monitoring/jest.config.ts"
      }
    },
    "tscheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc -p tsconfig.lib.json --noEmit"],
        "cwd": "libs/monitoring",
        "forwardAllArgs": false
      }
    }
  },
  "tags": ["scope:shared", "type:monitoring"]
}
