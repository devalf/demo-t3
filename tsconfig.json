{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "types": ["react", "node"],
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "outDir": "dist",
    "typeRoots": ["./types", "node_modules/@types"],
    "strictNullChecks": true,
    "allowJs": true
  }
}
